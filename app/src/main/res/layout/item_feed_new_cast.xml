<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@color/black_background_2">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_corner_16dp"
        android:backgroundTint="@color/black_background_3"
        app:layout_constraintBottom_toBottomOf="@+id/tvHint"
        app:layout_constraintEnd_toEndOf="@+id/tvHint"
        app:layout_constraintStart_toStartOf="@+id/tvHint"
        app:layout_constraintTop_toTopOf="@+id/tvHint" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanitLight.Small"
        android:id="@+id/tvHint"
        android:layout_width="0dp"
        android:layout_height="@dimen/_32sdp"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:background="@drawable/bg_outline_corner_16dp"
        android:backgroundTint="@color/black_background_1"
        android:foreground="@drawable/bg_ripple_rectangle_corner_16dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_4sdp"
        android:text="@string/whats_on_your_mind"
        android:textColor="@color/gray_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/flAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/flAvatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/black_background_1"
        android:foreground="@drawable/bg_ripple_circle"
        android:padding="@dimen/_1sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tvHint"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvHint">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_avatar" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>