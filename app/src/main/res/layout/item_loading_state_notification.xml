<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_4sdp"
    android:background="@color/black_background_2"
    app:shimmer_auto_start="true"
    app:shimmer_direction="left_to_right"
    app:shimmer_dropoff="@integer/material_motion_duration_medium_1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/ivPreviewAvatar"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_margin="@dimen/_12sdp"
            android:background="@drawable/bg_circle"
            android:backgroundTint="@color/gray_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ivPreviewDisplayName"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_23sdp"
            android:background="@drawable/bg_corner_8dp"
            android:backgroundTint="@color/gray_1"
            app:layout_constraintBottom_toBottomOf="@+id/ivPreviewAvatar"
            app:layout_constraintStart_toEndOf="@id/ivPreviewAvatar" />

        <View
            android:id="@+id/ivPreviewDateTime"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_9sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:background="@drawable/bg_corner_8dp"
            android:backgroundTint="@color/gray_1"
            app:layout_constraintStart_toStartOf="@id/ivPreviewDisplayName"
            app:layout_constraintTop_toTopOf="@id/ivPreviewAvatar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>