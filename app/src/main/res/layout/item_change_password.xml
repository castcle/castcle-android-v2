<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black_background_1">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.Medium"
        android:id="@+id/tvTitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:text="@string/fragment_change_password_title_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.Small"
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/password"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle1" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/CastcleTextInputLayout"
        android:id="@+id/tlPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:endIconDrawable="@drawable/ic_password"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/transparent"
        app:endIconTintMode="src_over"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPassword">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/AppTextKanit.xSmall"
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_corner_24dp"
            android:backgroundTint="@color/black_background_2"
            android:hint="@string/fragment_login_title_4"
            android:inputType="textPassword"
            android:maxLength="250"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_3" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCheckLength"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_margin="@dimen/_12sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tlPassword"
        app:srcCompat="@drawable/ic_check_circle"
        app:tint="@color/gray_1" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.xSmall"
        android:id="@+id/tvCheckLength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/fragment_change_password_title_4"
        android:textColor="@color/gray_1"
        app:layout_constraintBottom_toBottomOf="@+id/ivCheckLength"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCheckLength"
        app:layout_constraintTop_toTopOf="@+id/ivCheckLength" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCheckCase"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivCheckLength"
        app:layout_constraintStart_toStartOf="@+id/ivCheckLength"
        app:layout_constraintTop_toBottomOf="@+id/ivCheckLength"
        app:srcCompat="@drawable/ic_check_circle"
        app:tint="@color/gray_1" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.xSmall"
        android:id="@+id/tvCheckCase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/fragment_change_password_title_5"
        android:textColor="@color/gray_1"
        app:layout_constraintBottom_toBottomOf="@+id/ivCheckCase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCheckCase"
        app:layout_constraintTop_toTopOf="@+id/ivCheckCase" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.Small"
        android:id="@+id/tvConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_24sdp"
        android:text="@string/fragment_change_password_title_2"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCheckCase" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/CastcleTextInputLayout"
        android:id="@+id/tlConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        app:endIconDrawable="@drawable/ic_password"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/transparent"
        app:endIconTintMode="src_over"
        app:hintEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvConfirmPassword">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/AppTextKanit.xSmall"
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/bg_corner_24dp"
            android:backgroundTint="@color/black_background_2"
            android:hint="@string/fragment_change_password_title_3"
            android:inputType="textPassword"
            android:maxLength="250"
            android:paddingStart="@dimen/_16sdp"
            android:paddingEnd="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray_3" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivCheckMatch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@+id/ivCheckLength"
        app:layout_constraintStart_toStartOf="@+id/ivCheckLength"
        app:layout_constraintTop_toBottomOf="@+id/tlConfirmPassword"
        app:srcCompat="@drawable/ic_check_circle"
        app:tint="@color/gray_1" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.xSmall"
        android:id="@+id/tvCheckMatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/fragment_change_password_title_6"
        android:textColor="@color/gray_1"
        app:layout_constraintBottom_toBottomOf="@+id/ivCheckMatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCheckMatch"
        app:layout_constraintTop_toTopOf="@+id/ivCheckMatch" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/AppTextKanit.Regular"
        android:id="@+id/tvConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_36sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_24sdp"
        android:background="@drawable/bg_corner_24dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="@string/confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivCheckMatch" />

</androidx.constraintlayout.widget.ConstraintLayout>