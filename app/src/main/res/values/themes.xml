<resources>

    <style name="Theme.Castcle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/black_background_1</item>
        <item name="enterAnim">@anim/slide_in_right</item>
        <item name="exitAnim">@anim/slide_out_left</item>
        <item name="popEnterAnim">@anim/slide_in_left</item>
        <item name="popExitAnim">@anim/slide_out_right</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogBackgroundTheme</item>
    </style>

    <style name="BottomSheetDialogBackgroundTheme" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_corner_top_16dp</item>
        <item name="android:backgroundTint">@color/black_background_1</item>
    </style>

    <style name="CastcleTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="buttonTint">@color/blue</item>
    </style>

    <style name="Castcle.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/Castcle.TabItem</item>
    </style>

    <style name="Castcle.TabItem" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorControlActivated">@color/gray_4</item>
        <item name="boxStrokeColor">@color/black_background_2</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/black_background_3</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_25sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_25sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_25sdp</item>
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="TabIndicatorTheme" parent="TextAppearance.Design.Tab">
        <item name="fontFamily">@font/kanit_regular</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/kanit_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTheme.TextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="ContentToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="tabTextAppearance">@style/AppTheme.TextStyle</item>
        <item name="tabTextColor">@color/gray_1</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="indicatorInset">@color/transparent</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="AppTextKanit">
        <item name="fontFamily">@font/kanit_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Dialog.NoTitle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>

    <style name="AppTextKanit.Headline">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="AppTextKanit.Medium">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppTextKanit.Regular">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTextKanit.Small">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTextKanit.xSmall">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="AppTextKanit.xxSmall">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="AppTextKanitLight">
        <item name="fontFamily">@font/kanit_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextKanitLight.Medium">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppTextKanitLight.Regular">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTextKanitLight.Small">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTextKanitLight.xSmall">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="AppTextKanitLight.xxSmall">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="AppTextKanitExLight">
        <item name="fontFamily">@font/kanit_extra_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextKanitExLight.xSmall">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="AppTextSarabunLight">
        <item name="fontFamily">@font/sarabun_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextSarabunLight.Regular">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTextSarabunLight.Small">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTextSarabunLight.xSmall">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="AppTextSarabunLight.xxSmall">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>

    <style name="ThemeOverlay.App.CheckBox" parent="">
        <item name="buttonTint">@color/checkbox_tint</item>
    </style>

    <style name="AppTextKanitBold">
        <item name="fontFamily">@font/kanit_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextKanitBold.Headline">
        <item name="android:textSize">@dimen/_18sdp</item>
    </style>

    <style name="AppTextKanitBold.Medium">
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="AppTextKanitBold.Regular">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="AppTextKanitBold.Small">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AppTextKanitBold.xSmall">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

    <style name="AppTextKanitBold.Default">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AppTextKanitBold.xxSmall">
        <item name="android:textSize">@dimen/_9sdp</item>
    </style>
</resources>